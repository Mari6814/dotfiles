# Mark this as loaded
export BASH_ALIASES="$HOME/.bash_aliases"

# Shortcut function to cd into remote directory at argument $1, then open tensorboard --logdir ."
function tbr {
    if [ -z "$1" ]; then
        echo "usage: tbr <directory> [host=$LME]" >&2
        return 1
    fi
    local DIR="$1"
    local PORT="$(shuf -i 2000-65000 -n 1)"
    local cmd="cd $DIR && tensorboard --logdir . --port $PORT;"
    ssh -tL $PORT:localhost:$PORT "${2:-$LME}" "$cmd"
}

# Shortcut for poetry
alias p=poetry
# easy back cd command
alias ..="cd .."
# Virtaul env auto
function cd {
    builtin cd $1
    if [ -z "$VIRTUAL_ENV" ]; then
        if [ -f .venv/bin/activate ]; then
            . .venv/bin/activate
        fi
    else
        local CURRENT="$(realpath $(pwd))"
        local ROOT="$(realpath $VIRTUAL_ENV/..)"
        case $CURRENT/ in
            $ROOT/*) ;; # Still inside venv
            *) deactivate;; # Not in venv hierarchy anymore
        esac
    fi
}

# wait for jobs until the number of jobs is lower than the barrier
function barrier {
    if [ -z "$1" ]; then
        echo "Usage: barrier <limit> [intervall=1]" >&2
        return 1
    fi
    local LIMIT="$1"
    local INTERVALL="${2:-1}"
    while true; do
        if [ $(jobs | wc -l) -lt $LIMIT ]; then
            break
        fi
        sleep $INTERVALL
    done
}

