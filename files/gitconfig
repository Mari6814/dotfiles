[user]
	name = Marian Plivelic
	email = MarianPlivelic@gmail.com
[core]
	editor = vim
	excludesFile = ~/.gitignore
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
	tool = vimdiff
[alias]
    l = log --oneline --decorate --graph --all
    L = log --oneline --decorate --graph
    s = status -s
    d = difftool
    c = commit
    cm = commit -m
    cam = commit -am
    amend = commit --amend
    a = add
    A = add -A
    cs = "!gh copilot suggest -t git"
    co = checkout
    sw = switch
    b = branch
    t = tag
    m = merge
    p = push
    P = pull
    rebase = pull --rebase
    wt = worktree
[pull]
	rebase = true
[difftool]
	prompt = false
[init]
	defaultBranch = main
[push]
	default = current
[rerere]
	enabled = true
