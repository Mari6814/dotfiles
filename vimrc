set nocompatible
filetype plugin on
syntax on
filetype plugin indent on
set modelines=0
set number
set visualbell
set ruler
set encoding=utf-8
set wrap
set textwidth=128
set formatoptions=tcqrn1
set tabstop=4
set shiftwidth=4
set expandtab
imap <C-j> <C-o>j
imap <C-k> <C-o>k
imap <C-h> <C-o>h
imap <C-l> <C-o>l
set showmode
set showcmd
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch
set listchars=tab:▸\ ,eol:¬
set list
set matchpairs+=<:>
nmap ; :
set hidden
